<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" monitorInterval="60" name="web-terminal-backend" >
    <Properties>
        <Property name="log-path">logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>[%-5level] %d{ISO8601} [%T] [%C{1}:%L][%M] : %msg%n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"  level="INFO"></AppenderRef>
        </Root>

        <Logger name="com.github.terminal" level="info"></Logger>
    </Loggers>
</Configuration>
